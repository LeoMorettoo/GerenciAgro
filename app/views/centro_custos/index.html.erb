<p id="notice"><%= notice %></p>

<h1>Centro Custos</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Descrição</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @centro_custos.each do |centro_custo| %>
      <tr>
        <td><%= centro_custo.id %></td>
        <td><%= centro_custo.descricao %></td>
        <td><%= link_to 'Mostrar', centro_custo %></td>
        <td><%= link_to 'Editar', edit_centro_custo_path(centro_custo) %></td>
        <td><%= link_to 'Deletar', centro_custo, method: :delete, data: { confirm: 'Você tem certeza que deseja deletar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar um Custo', new_centro_custo_path, class: "btn btn-default" %>
