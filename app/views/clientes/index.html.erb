<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Cpf</th>
      <th>Cnpj</th>
      <th>Tipo conta</th>
      <th>Conta</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.id %></td>
        <td><%= cliente.nome %></td>
        <td><%= cliente.endereco %></td>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.cnpj %></td>
        <td><%= cliente.tipo_conta %></td>
        <td><%= cliente.conta %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_cliente_path, class: "btn btn-default" %>
