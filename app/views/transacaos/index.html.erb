<p id="notice"><%= notice %></p>

<h1>Transações</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Cliente</th>
      <th>Fornecedor</th>
      <th>Custo</th>
      <th>Valor</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @transacaos.each do |transacao| %>
      <tr>
        <td><%= transacao.id %></td>
        <td><%= transacao.cliente.nil? ? "Sem  Cliente" : transacao.cliente.nome %></td>
        <td><%= transacao.fornecedor.nil? ? "Sem Forncedor" : transacao.fornecedor.nome %></td>
        <td><%= transacao.centro_custo.descricao %></td>
        <td><%= transacao.valor %></td>
        <td><%= link_to 'Mostrar', transacao %></td>
        <td><%= link_to 'Editar', edit_transacao_path(transacao) %></td>
        <td><%= link_to 'Deletar', transacao, method: :delete, data: { confirm: 'Você tem certeza que deseja deletar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar uma transação', new_transacao_path, class: "btn btn-default" %>
