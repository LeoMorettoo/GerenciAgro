<p id="notice"><%= notice %></p>

<h1>Transacaos</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Cliente</th>
      <th>Fornecedor</th>
      <th>Centro custo</th>
      <th>Valor</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @transacaos.each do |transacao| %>
      <tr>
        <td><%= transacao.id %></td>
        <td><%= transacao.cliente.nil? ? "Sem  Cliente" : transacao.cliente.nome %></td>
        <td><%= transacao.fornecedor.nil? ? "Sem Forncedor": transacao.fornecedor.nome %></td>
        <td><%= transacao.centro_custo.descricao %></td>
        <td><%= transacao.valor %></td>
        <td><%= link_to 'Show', transacao %></td>
        <td><%= link_to 'Edit', edit_transacao_path(transacao) %></td>
        <td><%= link_to 'Destroy', transacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transacao', new_transacao_path, class: "btn btn-default" %>
