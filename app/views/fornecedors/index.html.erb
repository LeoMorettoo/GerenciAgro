<p id="notice"><%= notice %></p>

<h1>Fornecedors</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Cpf</th>
      <th>Cnpj</th>
      <th>Tipo conta</th>
      <th>Conta</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.id %></td>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.endereco %></td>
        <td><%= fornecedor.cpf %></td>
        <td><%= fornecedor.cnpj %></td>
        <td><%= fornecedor.tipo_conta %></td>
        <td><%= fornecedor.conta %></td>
        <td><%= link_to 'Show', fornecedor %></td>
        <td><%= link_to 'Edit', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Destroy', fornecedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fornecedor', new_fornecedor_path, class: "btn btn-default" %>
