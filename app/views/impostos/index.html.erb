<p id="notice"><%= notice %></p>

<h1>Impostos</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Titulo</th>
      <th>Descrição</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @impostos.each do |imposto| %>
      <tr>
        <td><%= imposto.id %></td>
        <td><%= imposto.titulo %></td>
        <td><%= imposto.descricao %></td>
        <td><%= link_to 'Mostrar', imposto %></td>
        <td><%= link_to 'Editar', edit_imposto_path(imposto) %></td>
        <td><%= link_to 'Destroir', imposto, method: :delete, data: { confirm: 'Você tem certeza que deseja deletar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar um Imposto', new_imposto_path , class: "btn btn-default"%>
