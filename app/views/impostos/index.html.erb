<p id="notice"><%= notice %></p>

<h1>Impostos</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Descricao</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @impostos.each do |imposto| %>
      <tr>
        <td><%= imposto.id %></td>
        <td><%= imposto.descricao %></td>
        <td><%= link_to 'Show', imposto %></td>
        <td><%= link_to 'Edit', edit_imposto_path(imposto) %></td>
        <td><%= link_to 'Destroy', imposto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Imposto', new_imposto_path , class: "btn btn-default"%>
