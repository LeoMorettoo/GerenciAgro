<%= form_for(imposto) do |f| %>
  <% if imposto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(imposto.errors.count, "error") %> prohibited this imposto from being saved:</h2>

      <ul>
      <% imposto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel-body">
    <div class="row">
      <div class="col-lg-8">
        <div class="form-group">
          <%= f.label :titulo %>
          <%= f.text_field :titulo,class: "form-control", placeholder: "Entre com titulo do imposto" %>
        </div>
          <div class="form-group">
            <div class="field">
              <%= f.label :descricao %>
              <%= f.text_area :descricao,class: "form-control", placeholder: "Entre com a descrição do imposto" %>
            </div>
          </div>
          <div class="form-group">
            <button id="add-faixa" type="button" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Adicionar uma faixa</button>
          </div>
          <div class="faixa-limites form-group form-inline">
            <%= f.fields_for :tabela_de_limites do |lf_form| %>
              <div class="form-group">
                <p>
                    limite inferior: <%= lf_form.text_field :limite_inferior %>
                </p>
              </div>
              <div class="form-group">
                <p>
                    limite superior: <%= lf_form.text_field :limite_superior %>
                </p>
              </div>
              <div class="form-group">
                <p>
                    aliquota: <%= lf_form.text_field :aliquota %>
                </p>
              </div>
            <% end %>
          </div>
          <div class="form-group input-group">
            <%= f.submit 'Enviar', class: "btn btn-default" %>
          </div>
        <% end %>
        </div>
    </div>
</div>

